<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="using:SuperMap.WinRT.Mapping"
>
    <Style TargetType="m:Map">
        <Setter Property="IsTabStop" Value="true" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="ZoomDuration" Value="0:0:.75" />
        <Setter Property="PanDuration" Value="0:0:.75" />
        <Setter Property="ZoomFactor" Value="2" />
        <Setter Property="PanFactor" Value="0.1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="m:Map">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid x:Name="RootElement" Width="Auto" Height="Auto" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>


<Grid RenderTransformOrigin="0,0.5" Margin="{TemplateBinding Margin}">
    <Grid.RenderTransform>
        <RotateTransform Angle="{TemplateBinding Angle}" />
    </Grid.RenderTransform>
    <Rectangle Fill="{Binding Style.ForeColor}" Height="1" Margin="10,0,15,0"  VerticalAlignment="Center" />
    <Ellipse Fill="{Binding Style.FillColor}" 
			 x:Name="{ScatterOutID}"
			 Stroke="{Binding Style.ForeColor}"
			 StrokeThickness="2" Width="15" Height="15" 
             HorizontalAlignment="Right">
    </Ellipse>
</Grid>
